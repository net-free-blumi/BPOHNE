rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // כולם יכולים לקרוא (כדי שהאתר יטען)
    match /config/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /packages/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
